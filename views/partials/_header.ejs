<header>
  <nav class="navbar navbar-expand-md navbar bg-warning">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="justify-content: space-around;">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(!user){ %>
        <form class="form-inline">
          <a type="submit" class="btn btn-success" href="/register">Register</a>
          <a type="submit" class="btn btn-success" href="/login">Login</a>
        </form>
        <% } else { %>
          <form class="form-inline" action="/logout" method="POST">
            <button type="submit" class="btn btn-outline-success">Logout</button>
          </form>
          <% } %>
    </div>
  </nav>
</header>